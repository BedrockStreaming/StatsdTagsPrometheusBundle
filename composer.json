{
    "name": "m6web/statsd-prometheus-bundle",
    "description": "Add statsd metrics in your symfony app. Allow you to bind metrics on any symfony event.",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": ["symfony", "bundle", "statsd", "m6web"],
    "authors": [
        {
            "name": "M6Web",
            "email": "opensource@m6web.fr",
            "homepage": "https://tech.m6web.fr/"
        }
    ],
    "config": {
        "bin-dir": "bin",
        "vendor-dir": "vendor",
        "sort-packages":  true
    },
    "require": {
        "php": ">=7.2",
        "psr/container": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "symfony/contracts": "^1.1 || ^2.0",
        "symfony/expression-language": "^3.4 || ^4.0 || ^5.0",
        "symfony/framework-bundle":   "^3.4 || ^4.0 || ^5.0",
        "symfony/property-access": "^3.4 || ^4.0 || ^5.0",
        "symfony/yaml":   "^3.4 || ^4.0 || ^5.0"
    },
    "require-dev": {
        "m6web/php-cs-fixer-config": "1.3.*",
        "phpstan/phpstan": "0.12.*",
        "phpstan/phpstan-phpunit": "0.12.*",
        "sensiolabs/security-checker": "6.0.*",
        "symfony/phpunit-bridge": "3.4.* || 5.1.*"
    },
    "suggest": {
        "symfony/console": "^4.3",
        "symfony/http-kernel": "^4.3"
    },
    "autoload": {
        "psr-4": { "M6Web\\Bundle\\StatsdPrometheusBundle\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    }
}
